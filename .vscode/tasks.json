{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build single cpp file",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-g",
                "-O0",
                "-std=c++23",
                "-Wall"
            ],
            "windows": {
                "args": [
                    "${file}",
                    "-o",
                    "${fileDirname}\\${fileBasenameNoExtension}.exe",
                    "-g",
                    "-O0",
                    "-std=c++23",
                    "-Wall"
                ]
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "build single cpp file (release)",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-O2",
                "-std=c++23",
                "-Wall"
            ],
            "windows": {
                "args": [
                    "${file}",
                    "-o",
                    "${fileDirname}\\${fileBasenameNoExtension}.exe",
                    "-O2",
                    "-std=c++23",
                    "-Wall"
                ]
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "clean current executable files under current directory",
            "type": "shell",
            "command": "find ${fileDirname} -maxdepth 1 -type f \\( -name '*.exe' -o -name '*.out' \\) -delete",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件（Windows)",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}